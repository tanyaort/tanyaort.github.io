---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Tanya Ortega | Data Portfolio">
  <section class="hero">
    <div class="hero-content">
      <p class="kicker">APPLIED DATA SCIENTIST</p>
      <h1 class="hero-title">Tanya Ortega</h1>
      <p class="hero-subtitle">
        Data science professional building clean, reliable data solutions.
      </p>

      <div class="hero-cta">
        <a class="btn primary" href="/projects">View Projects</a>
        <a class="btn ghost" href="https://www.linkedin.com/in/tanya-ortegaa/" target="_blank" rel="noopener">
          LinkedIn
        </a>
      </div>
    </div>

    <div class="hero-card">
      <div class="stat">
        <div class="stat-number">3.94</div>
        <div class="stat-label">M.S. Data Science GPA</div>
      </div>
      <div class="stat">
        <div class="stat-number">Alcalá 100</div>
        <div class="stat-label">Nomination (USD)</div>
      </div>
      <div class="stat">
        <div class="stat-number">ETL • ML • BI</div>
        <div class="stat-label">End-to-end analytics work</div>
      </div>
    </div>
  </section>
</BaseLayout>


