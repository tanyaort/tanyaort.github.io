---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { projects } from "../../data/projects.js";

const featured = projects; // show all
---

<BaseLayout title="Tanya Ortega | Projects">
  <section style="padding: 42px 0 10px;">
    <h1 style="margin: 0 0 10px; font-size: 54px; letter-spacing: -0.02em;">Projects</h1>
    <p style="max-width: 75ch; margin: 0 0 22px;">
      A selection of my work across data engineering, machine learning, and analytics.
    </p>

    <!-- GRID -->
    <div class="grid">
      {featured.map((p) => (
        <article class="card">
          <h2 class="cardTitle">{p.title}</h2>
          <p class="cardDesc">{p.description}</p>

          {p.tags?.length ? (
            <div class="tags">
              {p.tags.map((t) => (
                <span class="tag">{t}</span>
              ))}
            </div>
          ) : null}

          <a class="cardLink" href={p.github} target="_blank" rel="noopener noreferrer">
            View on GitHub â†’
          </a>
        </article>
      ))}
    </div>
  </section>

  <style>
    .grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 18px;
      margin-top: 18px;
    }

    @media (max-width: 980px) {
      .grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    @media (max-width: 640px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }

    .card {
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.10);
      border-radius: 18px;
      padding: 18px 18px 16px;
      box-shadow: 0 12px 30px rgba(0,0,0,.25);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      display: flex;
      flex-direction: column;
      min-height: 220px;
    }

    .cardTitle {
      margin: 0 0 10px;
      font-size: 18px;
      line-height: 1.25;
    }

    .cardDesc {
      margin: 0 0 14px;
      opacity: 0.9;
      line-height: 1.55;
      font-size: 14px;
    }

    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin-top: auto;
      padding-top: 6px;
    }

    .tag {
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid rgba(255,255,255,.12);
      background: rgba(255,255,255,.03);
      opacity: 0.95;
    }

    .cardLink {
      margin-top: 12px;
      display: inline-block;
      text-decoration: none;
      color: rgba(139, 123, 255, 1);
      font-weight: 600;
    }

    .cardLink:hover {
      text-decoration: underline;
    }
  </style>
</BaseLayout>


